{% extends 'backend/index.html.twig' %}
{% block login %}
{% endblock %}
{% block content %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Module</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>ID module</th>
                    <th>Nom du module</th>
                    <th>Description</th>
                    <th>Liste des matières</th>
                </tr>
                </thead>

                <tbody>
                <tr>
                    <td>{{ module.id }}</td>
                    <td>{{ module.nom }}</td>
                    <td>{{ module.description }}</td>
                    <td><a href="{{ path('module_show', { 'id': module.id }) }}) }}">Liste des matières</a></td>
                </tr>
                </tbody>

                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete" onclick="return confirm('Voulez-vous vraiment supprimer cette publication ?')">
                    {{ form_end(delete_form) }}
                </table>
            <li>
                <a href="{{ path('module_index') }}">Back to the list</a>
            </li>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
    </section>
    <!-- /.content -->
    </div>

{% endblock %}
