{% extends 'frontend/index.html.twig' %}

{% block content %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Liste des modules</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>ID module</th>
                    <th>Nom du module</th>
                    <th>Description</th>

                </tr>
                </thead>
                <tbody>
                {% for module in modules %}
                    <tr>
                        <td><a href="{{ path('module_indexEnseignant', { 'id': module.id }) }}">{{ module.id }}</a></td>
                        <td>{{ module.nom }}</td>
                        <td>{{ module.description }}</td>


                    </tr>
                {% endfor %}
                <table>


                    </tbody>

                </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
