{% extends 'frontend/index.html.twig' %}

{% block content %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Liste des matières</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>ID matière</th>
                    <th>Nom de la matière</th>
                    <th>Coefficient</th>
                    <th>Description</th>

                </tr>
                </thead>
                <tbody>
                {% for matiere in matieres %}
                    <tr>
                        <td><a href="{{ path('matiere_indexEtudiant', { 'id': matiere.id }) }}">{{ matiere.id }}</a></td>
                        <td>{{ matiere.nom }}</td>
                        <td>{{ matiere.coefficient }}</td>
                        <td>{{ matiere.description }}</td>

                    </tr>
                {% endfor %}

                    </tbody>

                </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
    </section>
    <!-- /.content -->
    </div>


{% endblock %}