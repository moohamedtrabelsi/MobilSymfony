<h2>Recherche des matières par leurs noms</h2>
<form method="POST">
    <input type="text" name="nom">
    <input type="submit" value="recherche">
</form>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Liste des matières</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>ID matière</th>
                <th>Nom de matière</th>
                <th>Coefficient</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ matiere.id }}</td>
                <td>{{ matiere.nom }}</td>
                <td>{{ matiere.coefficient }}</td>
                <td>{{ matiere.description }}</td>
            </tr>
            </tbody>
        </table>
    </div>
