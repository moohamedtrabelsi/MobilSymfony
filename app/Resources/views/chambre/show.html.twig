{% extends 'backend/index.html.twig' %}

{% block content %}
    <h1>Chambre</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>Etage</th>
                <td>{{ chambre.etage }}</td>
            </tr>
            <tr>
                <th>Nbrlit</th>
                <td>{{ chambre.nbrLit }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ chambre.prix }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('chambre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('chambre_edit', { 'id': chambre.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
